% Environment definitions
\theoremstyle{definition}
\newtheorem{theorem}{\wordTheorem}%[\numberBy]
\newtheorem{corollary}[theorem]{\wordCorollary}
\newtheorem{caution}[theorem]{\wordCaution}
\newtheorem{definition}[theorem]{\wordDefinition}
\newtheorem{example}[theorem]{\wordExample}
\newtheorem{exercise}[theorem]{\wordExercise}
\newtheorem{fact}[theorem]{\wordFact}
\newtheorem{idea}[theorem]{\wordIdea}
\newtheorem{lemma}[theorem]{\wordLemma}
\newtheorem{notation}[theorem]{\wordNotation}
\newtheorem{problem}{\wordProblem}
% \newtheorem{proof}[theorem]{\wordProof}
\newtheorem{proposition}[theorem]{\wordProposition}
\newtheorem{remark}[theorem]{\wordRemark}

%%%%% Useful maths commands that are not already included in mathtools, physics etc. %%%%%
% Commutative diagrams
\newenvironment{diagram}
    {
    \begin{center}
        \begin{tikzcd}
    }
    {
        \end{tikzcd}
    \end{center}
    }

\newcommand{\morph}[3]{#1\colon #2\to #3}  % Morphism (function, homomorphism, arrow). `\morph fAB' gives f: A\to B
\newcommand{\morpharr}[3]{#2 \xrightarrow{#1} #3}  % Morphism, overline. `\morpharr fAB` gives A -f-> B
\newcommand{\isomorph}[3]{#1: #2 \xrightarrow{~\simeq~} #3}  % Isomorphism.
\newcommand{\id}[1]{\mathrm{id}_{#1}} % Identity arrow

\DeclareMathOperator\End{End}
\DeclareMathOperator\Aut{Aut}
\DeclareMathOperator\Hom{Hom}

\newcommand{\Homset}[3][]{\Hom_{#1}(#2, #3)} % Zbiór strzałek

% \newcommand{\norm}[1]{||#1||}
\newcommand{\closedball}[1]{\overline{B^{#1}}}


